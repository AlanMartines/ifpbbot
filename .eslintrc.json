{
  "root": true,
  "env": {
    "browser": true,
    "commonjs": true,
    "es2021": true,
    "jquery": true
  },
  "plugins": ["only-warn"],
  "ignorePatterns": ["*.min.js"],
  "extends": [
    "eslint:recommended"
  ],
  "parserOptions": {
    "ecmaVersion": 12,
    "ecmaFeatures": {
      "jsx": true,
      "modules": true
    },
    "allowImportExportEverywhere": true,
    "sourceType": "module"
  },
  "rules": {
    "indent": [
      "warn",
      "tab",
      {
        "SwitchCase": 1
      }
    ],
    "linebreak-style": "off",
    "quotes": [
      "warn",
      "single"
    ],
    "semi": [
      "warn",
      "never"
    ],
    "no-unused-vars": "off",
    "no-empty": [
      "warn",
      {
        "allowEmptyCatch": true
      }
    ],
    "no-undef": "off",
    "no-inner-declarations": "off",
    "camelcase": [
      "warn",
      {
        "properties": "always"
      }
    ],
    "comma-dangle": ["warn", "never"],
    "no-async-promise-executor": "off"
  }
}